---
import Layout from "../layouts/default.astro";
import ImageSlider from "../components/ImageSlider";
import { Image } from "astro:assets";
import IndoorImage from "../images/house/IMG-20230724-WA0007.jpg";
import { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";

changeLanguage("cs");
---

<Layout title={t("home.title")}>
    <div class="mt-10">
        <ImageSlider client:load />
    </div>

    <div class="shadow-even h-auto rounded-2xl mt-10 flex justify-center flex-col items-center text-secondary">
        <h1 class="text-3xl font-bold m-10">{t("home.text1")}</h1>
        <div class="flex xl:flex-row flex-col items-center gap-10 p-10">

           <Image class="rounded-2xl select-none" src={IndoorImage} alt="Obrázek vnitřka penzionu, na obrázku postel, skříň a další vybavení" height="450" width="600"/>

           <div class="flex flex-col gap-10 text-lg">
               <p class="max-w-xl text-justify">
                   <Trans i18nKey="home.text2">
                       <strong>PENZION Kamélie</strong>
                   </Trans>

               </p>
               <p class="max-w-xl text-justify">
                   <Trans i18nKey="home.text3">
                       <strong>PENZION Kamélie</strong>
                   </Trans>
               </p>
           </div>

        </div>
        <h2 class="text-2xl font-bold m-10 text-center">{t("home.text4")}</h2>

        <iframe class="w-full ove" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d373.9044286913333!2d14.413861932200813!3d50.79966588803897!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47090cd77e50fb4d%3A0x7fb8be9a602df91e!2zS2Ftw6lsaWU!5e1!3m2!1scs!2scz!4v1704126491828!5m2!1scs!2scz" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

    </div>


</Layout>